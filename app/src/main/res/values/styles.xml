<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="linear_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="style_button_create_note">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/create_button_background</item>
        <item name="android:text">@string/create_new_note</item>
    </style>
    <style name="style_button_save_note" parent="style_button_create_note">
        <item name="android:text">@string/save_note</item>
    </style>

    <style name="field_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>
    <style name="field_title" parent="field_default">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:hint">@string/title_hint</item>
    </style>
    <style name="field_text" parent="field_default">
        <item name="android:layout_weight">1</item>
        <item name="android:hint">@string/write_your_note_here_hint</item>
    </style>

</resources>